{
  "extends": "@jsse/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noEmit": false,
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
